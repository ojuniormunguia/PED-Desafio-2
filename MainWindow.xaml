<Window x:Class="PED_Desafio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PED_Desafio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Canvas x:Name="MyCanvas" Background="White" MouseWheel="OnMouseWheel"
                MouseDown="OnMouseDown" MouseMove="OnMouseMove" MouseUp="MyCanvas_MouseUp" 
                Height="1000" Width="1500">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="translateTransform" X="0" Y="0"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </ScrollViewer>
</Window>
